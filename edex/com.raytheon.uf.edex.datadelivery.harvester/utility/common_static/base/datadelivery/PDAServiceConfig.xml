<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
    <!-- 
        This is an absolute override file, indicating that a higher priority 
        version of the file will completely replace a lower priority version
        of the file. 
    -->
<serviceConfig name="PDA">
    <!--  Date format used by PDA provider -->
    <dateConfig>
        <format>YYYYMMddHHmmss</format>
    </dateConfig>
    <constant name="BLANK" value="" />
    <!-- Command Channel FTP protocol encryption type. -->
    <constant name="PROTOCOL" value="TLS" />
    <!-- FTP variant used by PDA -->
    <constant name="CONN_TYPE" value="FTPS" />
    <constant name="PORT" value="21" />
    <!--  Directory camel drops FTP files into for ingest delivery. -->
    <constant name="FTPS_DROP_DIR" value="/awips2/edex/data/ftps" />
    <constant name="MISSING_VALUE" value="-999999" />
    <constant name="FILL_VALUE" value="-888888" />
    <constant name="DEFAULT_MULTIPLIER" value="0.5" />
    <constant name="DEFAULT_RUN_INCREMENT" value="1" />
    <constant name="DEFAULT_OFFSET" value="30" />
    <constant name="SEPARATOR" value="-" />
    <constant name="BASE_TYPE" value="Float" />
    <constant name="UNITS" value="NONE" />
    <constant name="DEFAULT_FORMAT" value="SAT" />
    <!-- Decoder type (temporary, until metadata improves from PDA) -->
    <constant name="DEFAULT_TYPE" value="goesr" />
    <!--  Default PDA OGC CRS (WGS 84) -->
    <constant name="DEFAULT_CRS" value="urn:ogc:def:crs:EPSG::4326" />
    <!-- PDA test data is old, when using it, set this to true so times show as current. -->
    <constant name="SIMULATE" value="false" />
    <!-- PDA data is binary -->
    <constant name="BINARY_TRANSFER" value="true" />
    <!-- IMPLICIT_SECURITY, Will automatically try to encrypt both command and data channel, 
         PDA data channel is not encrypted so we have this false. -->
    <constant name="IMPLICIT_SECURITY" value="false" />
    <!-- PDA FTPS(S) server requires PASSV mode for FTP -->
    <constant name="PASSIVE_MODE" value="true" />
    <!-- HTTPS subset request root URL -->
    <constant name="SUBSET_REQUEST_URL" value="https://140.90.190.159/services/OGC_In_Proxy" />
    <!-- FTPS retrieval root URL -->
    <constant name="FTPS_REQUEST_URL" value="ftps://140.90.190.155" />
    <!-- REMOTE_VERIFICATION_ENABLED, False when you are hitting a load balanced FTP(S) server -->
    <constant name="REMOTE_VERIFICATION_ENABLED" value="true" />
    <!-- FTP_CONNECT_TIMEOUT, maximum time in seconds to wait for a connection response -->
    <constant name="FTP_CONNECT_TIMEOUT" value="30" />
    <!-- FTP_DATA_TIMEOUT, maximum time in seconds to wait for a packet response during a data transfer -->
    <constant name="FTP_DATA_TIMEOUT" value="120" />
    <!-- DELETE_FILE_AFTER_PROCESSING, Deletes downloaded file after it has been processed -->
    <constant name="DELETE_FILE_AFTER_PROCESSING" value="true" />
    <!-- Disables the secure data channel defaults (execProc=P execPbsz=0). 
         Enabling this means you must manually specific the security protocol
         and Buffer size for the Data Channel in FTPS -->
    <constant name="DISABLE_SECURE_DATA_CHANNEL_DEFAULTS" value="true" />
    <!-- secure data channel override of default execProc=P -->
    <constant name="EXEC_PROT" value="C" />
    <!-- secure data channel override of default execPbsz=0 -->
    <constant name="EXEC_PBSZ" value="1024" />
    <!-- Debug metadata and retrieval portions of PDA subsystem -->
    <constant name="DEBUG" value="true" />
    <!-- JKS based keystore and trust modules for DD -->
    <constant name="KEYSTORE_FILE" value="/awips2/edex/conf/security/keystore.jks" />
    <constant name="TRUSTSTORE_FILE" value="/awips2/edex/conf/security/truststore.jks" />
    <!-- These are used for ASYNC retrieval requests -->
    <constant name="RETRIEVAL_MODE" value="ASYNC" />
    <constant name="ASYNC_RESPONSE_HANDLER" value="https://{SITE_ADDR_TO_PDA}:8082/GetCoverageResponseHandler" />

    <!-- These are used for parsing the PDA data set metadata -->
    <!-- TODO: Move these to a separate config file. -->
    <!-- Example: OR_ABI-L2-DMWF-M4C07_G16_s20161932020192_e20161932025000_c20161932032500.nc -->
    <constant name="RECORD_TITLE_REGEX"
        value="([A-Z0-9]+_[A-Z0-9]+-[A-Z0-9]+)-(([A-Z0-9]{3,5}?)(C|F|M1|M2)?)(-(M[34](C\d\d)?))?_([A-Z0-9]+)_s([\d]{14})_e([\d]{14})_c([\d]{14})\.[a-zA-Z0-9]+" />
    <constant name="PARAM_FORMAT" value="$3" />
    <constant name="RES_FORMAT" value="$4" />
    <constant name="SAT_FORMAT" value="$8" />
    <constant name="START_TIME_FORMAT" value="$9" />
    <constant name="END_TIME_FORMAT" value="$10" />
</serviceConfig>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- PDA service agent configuration -->
<harvester>
	<!-- Provider information -->
	<provider serviceType="PDA" name="PDA">
		<!-- Primary type for PDA is satellite, will be more -->
		<providerType dataType="PDA" plugin="sat" availabilityDelay="100" />
		<projection type="LatLon">
			<name>PDALatLon</name>
			<description>Test LatLonGrid Coverage for PDA</description>
		</projection>
		<connection>
		    <!-- PDA FTPS server name -->
			<url>ftps://pda.espds.noaa.gov</url>
		</connection>
	</provider>	
    <!-- default one week of DataSetMetaData retention -->
    <retention>7</retention>
	<agent xsi:type="pdaAgent" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<dateFormat>YYYYDDDHHmmSSS</dateFormat>
		<!-- CSW (catalog service) return URL, Will be the external URL of the 
			NCF central registry when running in production -->
		<responseHandler>${harvester.external.address}:8082/PDAHarvesterResponseHandler</responseHandler>
		<!-- CSW (catalog service) URL -->
		<cswURL>http://pda.espds.noaa.gov</cswURL>
		<!-- Collect records every 15 minutes -->
		<mainScan>0 0/15 * * * ?</mainScan>
	</agent>
</harvester>